<div class="col-md-6 col-md-offset-3">
    
    <div class="signup-form">

    <h2>Zmień hasło</h2>
    
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
    
      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>
    
      <div class="form-inputs">
        <%= f.input :password, label: "Nowe hasło", required: true, autofocus: true, hint: ("Minimum #{@minimum_password_length} znaków" if @minimum_password_length) %>
        <%= f.input :password_confirmation, label: "Potwierdź hasło", required: true %>
      </div>
    
      <div class="form-actions">
        <%= f.button :submit, "Zmień hasło", :class => "btn-custom2" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>