<div class="col-md-6 col-md-offset-3">
    
    <div class="edit-review-form">
        <h1>Edytuj komentarz</h1>

        <%= simple_form_for([@movie, @review]) do |f| %>
            
            <div id="rating-form">
                <label>Ocena</label>
            </div>
            
            <%= f.input :comment, label: "Komentarz" %>
            <%= f.button :submit, "Uaktualnij", :class => 'btn-custom2' %>
        <% end %>
        
    </div>
</div>

<script>
    $('#rating-form').raty({
        path: '/assets/',
        scoreName: 'review[rating]'
    });
</script>