<%= simple_form_for([@movie, @movie.reviews.build]) do |f| %>
    
    <div id="rating-form">
        <label>Ocena</label>
    </div>
   
    <%= f.input :comment, label: "Komentarz" %>
    <%= f.button :submit %>

<% end %>

<script>
    $('#rating-form').raty({
        path: '/assets/',
        scoreName: 'review[rating]'
    });
</script>